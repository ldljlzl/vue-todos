// 将设置放入此文件中以覆盖默认值和用户设置。
{
    // {
    // "auto-close-tag.SublimeText3Mode": true
    // }
    "files.associations": {
        // extension name : html
        "*.ejs": "html",
        "*.js": "html"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        "vue"
    ],
    "eslint.options": {
        "plugins": ["html"],
        "extensions": [
            ".js",
            ".vue"
        ]
    },
    "emmet.syntaxProfiles": {
        "javascript": "jsx",
        "vue-html": "html",
        "vue": "html"
    },
    "css.remoteStyleSheets": [
        "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
    ]
}